extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3 
    .row 
      .col-12 
        +box-head("danh sach san pham") 


    .row
      each item in product
        .col-4.mb-3
          .product-item
            .inner-image 
              img(
                src=item.thumbnail 
                alt=item.title
                style="width: 100px"
              ) 
            .inner-content 
              h3.inner-title 
                a(href=`/products/${item.slug}`) #{item.title}
              .inner-price #{item.price} $  
 

  